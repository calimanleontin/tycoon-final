{% extends '::base.html.twig' %}

{% block header %}
    {% include 'TycoonCatalogBundle::header.html.twig' %}
{% endblock %}

{% block mainContent %}
    <div class="push-10-px"></div>
    <div class="row">
        <div class="left-sidebar col-lg-2 col-md-3 col-sm-3">
            {% block leftSidebar %}
                <div class="push-10px"></div>
                {% render controller("TycoonCatalogBundle:Attribute:filter") %}
                {% render controller("TycoonCatalogBundle:Category:list") %}
            {% endblock %}
        </div>
        <div class="col-lg-10 col-md-9 col-sm-9">

            {% block body %}
            {% endblock %}
        </div>
    </div>
{% endblock %}

{% block footer %}
