        <div class="row">
            <div class="col-sm-6">
                &copy; 2015 Tycoon Shop. All Rights Reserved.
            </div>
            <div class="col-sm-6">
                <ul class="pull-right">
                    <li><a href="{{ path('Catalog_Product_list') }}">Home</a></li>
                    <li><a href="{{ path('Catalog_Page_about') }}">About</a></li>
                    <li><a href="#">FAQ</a></li>
                    <li><a href="{{ path('Catalog_Page_contact') }}">Contact</a></li>
